<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c9_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/p10" >

        <Button
            android:id="@+id/search_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h40"
            android:layout_marginBottom="@dimen/p8"
            android:paddingLeft="@dimen/p10"
            android:editable="false"
            android:background="@drawable/bg_search_dark"
            android:drawableLeft="@drawable/icon_search"
            android:drawablePadding="@dimen/p6"
            android:gravity="center_vertical"
            android:hint="@string/search_hint"
            android:textColor="@color/c6_grey"
            android:textSize="@dimen/s4"
            android:visibility="visible" />

        <Button
            android:id="@+id/discoivery_new_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h50"
            android:background="@drawable/bg_new_video"
            android:drawableLeft="@drawable/icon_new_video"
            android:drawablePadding="@dimen/p6"
            android:drawableRight="@drawable/icon_arrow_white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/p10"
            android:paddingRight="@dimen/p10"
            android:text="@string/new_videos"
            android:textColor="@color/c9_white"
            android:textSize="@dimen/s1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

</LinearLayout>