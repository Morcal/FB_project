<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c8_shallow_white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/h30"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/p10"
            android:drawableTop="@drawable/icon_no_gerenzhuye"
            android:padding="@dimen/p10"
            android:text="快来跟世界拍个玩笑啊"
            android:textColor="@color/c6_grey"
            android:textSize="@dimen/s3" />

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_orange"
            android:paddingTop="@dimen/p10"
            android:paddingBottom="@dimen/p10"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="马上开拍"
            android:textColor="@color/c9_white"
            android:textSize="@dimen/s1" />
    </LinearLayout>
</RelativeLayout>