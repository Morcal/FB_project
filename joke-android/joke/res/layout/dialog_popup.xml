<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_base"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/dialog_remind_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/small_module_distance"
        android:paddingRight="@dimen/small_module_distance"
        android:text="@string/dialog_content"
        android:textColor="@color/c4_black"
        android:textSize="@dimen/s1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/p10"
        android:background="@color/c7_light_grey" />

    <TextView
        android:id="@+id/dialog_remind_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/small_module_distance"
        android:paddingRight="@dimen/small_module_distance"
        android:gravity="center"
        android:scrollbars="vertical"
        android:maxLines="6"
        android:text="@string/dialog_content"
        android:textColor="@color/c4_black"
        android:textSize="@dimen/s1" />

    <Button
        android:id="@+id/dialog_yes"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dialog_base_btn_height"
        android:layout_marginTop="@dimen/module_distance"
        android:background="@drawable/bg_orange"
        android:gravity="center"
        android:minWidth="@dimen/h160"
        android:text="@string/dialog_confirm_sure"
        android:textColor="@color/c9_white"
        android:textSize="@dimen/s2"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/module_distance"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/small_module_distance"
        android:paddingRight="@dimen/small_module_distance" >

        <TextView
            android:id="@+id/dialog_remind_cancle"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_base_btn_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/bg_grey"
            android:gravity="center"
            android:text="@string/dialog_cancle"
            android:textColor="@color/c4_black"
            android:textSize="@dimen/s2" />

        <TextView
            android:id="@+id/dialog_remind_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_base_btn_height"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/bg_grey"
            android:gravity="center"
            android:text="@string/dialog_confirm_sure"
            android:textColor="@color/c9_white"
            android:textSize="@dimen/s2" />
    </LinearLayout>

</LinearLayout>