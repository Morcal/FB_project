<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_comment"
        android:minWidth="@dimen/p290"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/dialog_remind_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h45"
            android:background="@drawable/bg_dialog_btn_top"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_report"
                android:drawablePadding="@dimen/p6"
                android:text="@string/dialog_confirm_report"
                android:textColor="@color/c4_black"
                android:textSize="@dimen/s1" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/p1"
            android:background="@color/c6_grey_alpha_30" />

        <TextView
            android:id="@+id/dialog_remind_cancle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h45"
            android:background="@drawable/bg_dialog_btn_bottom"
            android:gravity="center"
            android:text="@string/dialog_cancle"
            android:textColor="@color/c4_black"
            android:textSize="@dimen/s1" />
    </LinearLayout>

</LinearLayout>