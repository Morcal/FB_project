<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c8_shallow_white">

    <FrameLayout
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_orange"
            android:paddingBottom="@dimen/p10"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="@dimen/p10"
            android:text="勾搭新朋友"
            android:textColor="@color/c9_white"
            android:textSize="@dimen/s1" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/btn"
        android:paddingBottom="40dp"
        android:paddingLeft="@dimen/p20">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_not_attention" />
    </FrameLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/p10"
        android:text="交些朋友出去浪"
        android:textColor="@color/c6_grey"
        android:textSize="@dimen/s3" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text2"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/p5"
        android:text="一个玩容易胖"
        android:textColor="@color/c6_grey"
        android:textSize="@dimen/s3" />
</RelativeLayout>