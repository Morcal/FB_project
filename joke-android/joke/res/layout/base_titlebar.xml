<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/titlebar_bg">

    <RelativeLayout
        android:id="@+id/head_left"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlebar_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/p15"
        android:paddingRight="@dimen/p15">

        <ImageView
            android:id="@+id/iv_head_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_back"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_head_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/back_text"
            android:textColor="@color/c9_white"
            android:textSize="@dimen/s3"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/head_right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlebar_height"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="@dimen/p15"
        android:paddingRight="@dimen/p15">

        <ImageView
            android:id="@+id/iv_head_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_video_detail_more_selector"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_head_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c9_white"
            android:textSize="@dimen/s3"
            android:visibility="visible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/head_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:src="@drawable/btn_back"
        android:textColor="@color/c9_white"
        android:textSize="@dimen/s1" />

</RelativeLayout>