<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/toast_padding">


        <ImageView
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@anim/progressbar_loading"
            android:padding="5dp" />

        <TextView
            android:id="@+id/progess_message"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/progress_min_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/toast_line_spacing_extra"
            android:paddingTop="@dimen/progress_msg_paddingtop"
            android:textColor="@color/c6"
            android:textSize="@dimen/s8"
            tools:text="测试测试" />
    </LinearLayout>
</FrameLayout>