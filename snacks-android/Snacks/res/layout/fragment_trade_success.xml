<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/c5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="@dimen/trade_success_padding"
        android:paddingBottom="@dimen/trade_success_padding">
        <com.feibo.snacks.view.widget.DrawableCenterTextView
            android:id="@+id/trade_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/c1"
            android:textSize="@dimen/s1"
            android:text="@string/trade_success"
            android:drawableLeft="@drawable/icon_success"
            android:drawablePadding="@dimen/icon_text_distance"
            />

        <TextView
            android:id="@+id/trade_result1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/trade_success_both_sides"
            android:gravity="center"
            android:textColor="@color/c8"
            android:textSize="@dimen/s8"
            android:text="@string/trade_success_result"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/c5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/trade_success_both_sides"
        android:paddingRight="@dimen/trade_success_both_sides">
        <LinearLayout
            android:id="@+id/pay_money_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/trade_success_padding"
            android:paddingBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/s8"
                android:textColor="@color/c8"
                android:text="@string/pay_money"/>
            <TextView
                android:id="@+id/pay_money_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/s1"
                android:textColor="@color/c1"
                android:text="@string/pay_money"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/trade_success_padding"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/trade_success_both_sides"
            android:paddingRight="@dimen/trade_success_both_sides"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/order_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/c1"
                android:textSize="@dimen/s2"
                android:text="@string/trade_success_order"
                android:background="@drawable/btn_delivery"
                android:paddingBottom="@dimen/trade_result_btn_padding"
                android:paddingTop="@dimen/trade_result_btn_padding"
                android:layout_marginRight="@dimen/result_button_distance"
                />
            <TextView
                android:id="@+id/back_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/c1"
                android:textSize="@dimen/s2"
                android:text="@string/pay_success_home"
                android:background="@drawable/btn_delivery"
                android:paddingBottom="@dimen/trade_result_btn_padding"
                android:paddingTop="@dimen/trade_result_btn_padding"
                android:layout_marginLeft="@dimen/result_button_distance"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
