<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_cart_footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/full_discount"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_cart_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/b1"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_sales"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/full_free_mail"
            android:textColor="@color/c6"
            android:textSize="@dimen/s6" />

        <TextView
            android:id="@+id/item_cart_tag_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/item_home_promotion_discount"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/c8"
            android:textSize="@dimen/s5" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/small_module_distance"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_arrow" />

    </LinearLayout>

    <View
        android:id="@+id/distance"
        style="@style/FineLineMarginStyle" />

    <RelativeLayout
        android:id="@+id/subtotal"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:id="@+id/item_cart_goods_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/b1"
            android:layout_marginRight="@dimen/b1"
            android:text="共1件商品"
            android:textColor="@color/c2"
            android:textSize="@dimen/s4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_cart_account"
            android:layout_toLeftOf="@+id/item_cart_account"
            android:layout_toStartOf="@+id/item_cart_account"
            android:text="小计 : "
            android:textColor="@color/c2"
            android:textSize="@dimen/s4" />

        <TextView
            android:id="@+id/item_cart_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/item_cart_goods_number"
            android:layout_marginLeft="@dimen/b1"
            android:layout_marginRight="@dimen/b1"
            android:text="￥88.00"
            android:textColor="@color/c1"
            android:textSize="@dimen/s4" />

    </RelativeLayout>
</LinearLayout>