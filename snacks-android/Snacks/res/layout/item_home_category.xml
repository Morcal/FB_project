<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:paddingBottom="9dp"
    android:paddingLeft="@dimen/small_module_distance"
    android:paddingRight="@dimen/small_module_distance"
    android:paddingTop="9dp" >

    <TextView
        android:id="@+id/item_home_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:text="进口"
        android:textSize="@dimen/s3"
        android:textColor="@color/c2"/>

    <TextView
        android:id="@+id/item_home_category_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/item_home_category_title"
        android:text="进口"
        android:textSize="@dimen/s5"
        android:textColor="@color/c3"/>

    <ImageView
        android:layout_alignParentRight="true"
        android:id="@+id/item_home_category_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_home_class84x84" />

</RelativeLayout>