<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/c5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="@dimen/b1"
        android:paddingRight="@dimen/b1"
        android:background="@color/white">

        <ImageView
            android:id="@+id/logistics_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/default_bg_150_150"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/logistics_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圆通速递"
            android:textSize="@dimen/s8"
            android:textColor="@color/c2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/logistics_icon" />
        <TextView
            android:id="@+id/logistics_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运单编号 : "
            android:textColor="@color/c8"
            android:textSize="@dimen/s7"
            android:layout_alignBottom="@+id/logistics_icon"
            android:layout_alignLeft="@+id/logistics_name"
            android:layout_alignStart="@+id/logistics_name" />
        <TextView
            android:id="@+id/logistics_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="126464875"
            android:maxLines="3"
            android:textColor="@color/c8"
            android:textSize="@dimen/s7"
            android:layout_alignTop="@+id/logistics_number"
            android:layout_toRightOf="@+id/logistics_number"
            android:layout_toEndOf="@+id/logistics_number" />

    </RelativeLayout>

</LinearLayout>
