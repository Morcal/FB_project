<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/BoldLineStyle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_base_item_layout"
        android:paddingBottom="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/address_select_state"
            android:ellipsize="end"
            android:maxEms="6"
            android:singleLine="true"
            android:text="姓名"
            android:textColor="@color/c2"
            android:textSize="@dimen/s3" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/address_name"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/address_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:text="13838338"
                android:textColor="@color/c2"
                android:textSize="@dimen/s3" />

            <ImageView
                android:id="@+id/address_default_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/address_phone"
                android:layout_gravity="center"
                android:src="@drawable/icon_default" />

        </LinearLayout>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_name"
            android:layout_marginRight="45dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/address_select_state"
            android:lineSpacingExtra="@dimen/about_line_spacing_extra"
            android:text="福建省厦门市思明区观日路46号"
            android:textColor="@color/c8"
            android:textSize="@dimen/s7" />

        <ImageView
            android:id="@+id/address_select_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/btn_address_select" />

        <ImageView
            android:id="@+id/address_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/btn_edit" />

    </RelativeLayout>
    <View
        android:id="@+id/bottom_shadow"
        style="@style/BoldLineStyle"
        android:visibility="gone" />
</LinearLayout>


