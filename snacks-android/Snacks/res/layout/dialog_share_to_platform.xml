<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="#00000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c5"
        android:orientation="vertical"
        android:paddingTop="@dimen/share_module_distance"
        android:paddingBottom="@dimen/share_module_distance"
        android:paddingLeft="@dimen/share_both_module_distance"
        android:paddingRight="@dimen/share_both_module_distance">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/share_to_sina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/c5"
                android:drawablePadding="@dimen/dialog_share_platform_distance"
                android:drawableTop="@drawable/bg_share_sina"
                android:singleLine="true"
                android:paddingLeft="@dimen/platform_side_distance"
                android:paddingRight="@dimen/platform_side_distance"
                android:text="@string/dialog_share_sina"
                android:textColor="@color/c8"
                android:textSize="@dimen/s5" />

            <Button
                android:id="@+id/share_to_weixin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:background="@color/c5"
                android:drawablePadding="@dimen/dialog_share_platform_distance"
                android:drawableTop="@drawable/bg_share_weixin"
                android:paddingLeft="@dimen/platform_side_distance"
                android:paddingRight="@dimen/platform_side_distance"
                android:text="@string/dialog_share_weixin"
                android:textColor="@color/c8"
                android:textSize="@dimen/s5" />

            <Button
                android:id="@+id/share_to_friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/c5"
                android:singleLine="true"
                android:drawablePadding="@dimen/dialog_share_platform_distance"
                android:drawableTop="@drawable/bg_share_friend"
                android:paddingLeft="@dimen/platform_side_distance"
                android:paddingRight="@dimen/platform_side_distance"
                android:text="@string/dialog_share_friend"
                android:textColor="@color/c8"
                android:textSize="@dimen/s5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/module_distance"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/share_to_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/c5"
                android:singleLine="true"
                android:drawablePadding="@dimen/dialog_share_platform_distance"
                android:drawableTop="@drawable/bg_share_qq"
                android:paddingLeft="@dimen/platform_side_distance"
                android:paddingRight="@dimen/platform_side_distance"
                android:text="@string/dialog_share_qq"
                android:textColor="@color/c8"
                android:textSize="@dimen/s5" />

            <Button
                android:id="@+id/share_to_zone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/c5"
                android:singleLine="true"
                android:drawablePadding="@dimen/dialog_share_platform_distance"
                android:drawableTop="@drawable/bg_share_zone"
                android:paddingLeft="@dimen/platform_side_distance"
                android:paddingRight="@dimen/platform_side_distance"
                android:text="@string/dialog_share_zone"
                android:textColor="@color/c8"
                android:textSize="@dimen/s5" />

            <Button
                android:id="@+id/share_to_copy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/c5"
                android:singleLine="true"
                android:drawablePadding="@dimen/dialog_share_platform_distance"
                android:drawableTop="@drawable/bg_share_copy"
                android:paddingLeft="@dimen/platform_side_distance"
                android:paddingRight="@dimen/platform_side_distance"
                android:text="@string/dialog_share_copy"
                android:textColor="@color/c8"
                android:textSize="@dimen/s5" />

        </LinearLayout>
    </LinearLayout>
    
    <TextView
        android:id="@+id/cancel"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/c8"
        android:textSize="@dimen/s8"
        android:background="@drawable/bg_share_cancel"
        />

</LinearLayout>