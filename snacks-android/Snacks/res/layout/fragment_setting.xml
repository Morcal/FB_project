<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c6"
    android:orientation="vertical">

    <View style="@style/BoldLineStyle" />

    <com.feibo.snacks.view.widget.BaseItemLayout
        android:id="@+id/setting_item_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintType="noHint"
        app:line_padding="7dp"
        app:itemTitle="@string/setting_item_person_data" />

    <com.feibo.snacks.view.widget.BaseItemLayout
        android:id="@+id/setting_item_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintType="noHint"
        app:itemTitle="@string/setting_item_address_manager" />

    <View style="@style/BoldLineStyle" />

    <com.feibo.snacks.view.widget.BaseItemLayout
        android:id="@+id/setting_item_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showArrow="false"
        app:hintType="onlyMsg"
        app:itemTitle="@string/setting_item_clear_cache"
        app:line_padding="7dp"
        app:messageHintTitle="@string/clear_cache_finish_hint" />

    <com.feibo.snacks.view.widget.BaseItemLayout
        android:id="@+id/setting_item_check_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showArrow="false"
        app:hintType="onlyMsg"
        app:itemTitle="@string/setting_item_check_version"
        app:showMarginBottom="false"
        app:line_padding="7dp"
        app:messageHintTitle="@string/check_new_version_default_hint" />

    <com.feibo.snacks.view.widget.BaseItemLayout
        android:id="@+id/setting_item_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintType="noHint"
        app:itemTitle="@string/setting_item_about_snacks" />

    <Button
        android:id="@+id/setting_exit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_btn_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/about_padding_left"
        android:layout_marginRight="@dimen/about_padding_left"
        android:layout_marginTop="@dimen/setting_btn_margin_top"
        android:background="@drawable/bg_exit"
        android:text="@string/login_out"
        android:textColor="@color/c8"
        android:textSize="@dimen/s2" />

</LinearLayout>