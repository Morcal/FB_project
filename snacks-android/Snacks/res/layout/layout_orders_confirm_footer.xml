<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.feibo.snacks.view.widget.SimpleItemView
            android:id="@+id/item_cost_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            app:name_text="商品总额"
            app:item_padding="7dp"
            app:value_size="@dimen/s8"
            app:has_arrow="false"/>

        <com.feibo.snacks.view.widget.SimpleItemView
            android:id="@+id/item_cost_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:value_size="@dimen/s8"
            app:name_text="邮费"
            app:item_padding="7dp"
            app:has_arrow="false"/>

        <com.feibo.snacks.view.widget.SimpleItemView
            android:id="@+id/item_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:name_text="优惠券"
            app:value_color="@color/c1"
            app:item_padding="7dp"
            app:has_arrow="true"
            app:can_pressed="true"/>

        <com.feibo.snacks.view.widget.SimpleItemView
            android:id="@+id/item_coupon_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:name_text="优惠"
            app:value_color="@color/c1"
            app:item_padding="7dp"
            app:has_arrow="false"
            app:can_pressed="true"/>

        <com.feibo.snacks.view.widget.SimpleItemView
            android:id="@+id/item_cost_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:name_text="合计"
            app:value_size="@dimen/s8"
            app:value_color="@color/c1"
            app:item_padding="7dp"
            app:has_arrow="false"
            app:has_divider="false"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/c5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_zfb"
            android:layout_marginLeft="@dimen/b1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView7" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zhi_fu_bao"
            android:layout_marginLeft="10dp"
            android:textColor="@color/c8"
            android:textSize="@dimen/s3"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView7"
            android:layout_toEndOf="@+id/imageView7" />


    </RelativeLayout>


</LinearLayout>
