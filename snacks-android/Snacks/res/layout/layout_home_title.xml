<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/head_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/small_module_distance"
        android:layout_marginRight="20dp"
        android:background="@drawable/icon_cat"
        android:scaleType="centerInside" />

    <EditText
        android:id="@+id/head_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/bg_search"
        android:drawableLeft="@drawable/icon_search"
        android:drawablePadding="4dp"
        android:editable="false"
        android:gravity="center_vertical"
        android:hint="@string/search_hint"
        android:imeOptions="actionSearch"
        android:inputType="none"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/c3"
        android:textSize="@dimen/s4" />


    <RelativeLayout
        android:id="@+id/head_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:paddingLeft="7dp"
        android:paddingRight="7dp">

        <LinearLayout
            android:id="@+id/home_car_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/home_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_car" />
        </LinearLayout>

        <TextView
            android:id="@+id/home_car_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/home_car_parent"
            android:layout_alignTop="@id/home_car_parent"
            android:background="@drawable/bg_home_number"
            android:gravity="center"
            android:textColor="@color/c6"
            android:textSize="@dimen/s6"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
