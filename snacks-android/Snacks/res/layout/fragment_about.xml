<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c6"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="30dp"
                android:src="@drawable/icon_about_logo"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/about_padding_top"
                android:paddingLeft="@dimen/about_padding_left"
                android:paddingRight="@dimen/about_padding_left"
                android:paddingTop="@dimen/about_padding_top">

                <TextView
                    android:id="@+id/about_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/about_line_spacing_extra"
                    android:text="@string/about_us"
                    android:textColor="@color/c2"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/s3" />

                <TextView
                    android:id="@+id/about_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textIsSelectable="true"
                    android:layout_marginTop="29dp"
                    android:lineSpacingExtra="@dimen/about_line_spacing_extra"
                    android:text="@string/about_us_contact"
                    android:textColor="@color/c2"
                    android:textSize="@dimen/s3" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>