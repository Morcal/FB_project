<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.feibo.snacks.MainActivity">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/home_tab"></FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/fine_line_height"
        android:layout_above="@id/home_tab"
        android:background="@color/c7" />

    <LinearLayout
        android:id="@+id/home_tab"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@color/c5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_home"
            style="@style/NavibarBtnStyle"
            android:text="@string/home"
            android:drawableTop="@drawable/btn_home" />

        <Button
            android:id="@+id/main_category"
            style="@style/NavibarBtnStyle"
            android:text="@string/sales"
            android:drawableTop="@drawable/btn_sales" />

        <Button
            android:id="@+id/main_topic"
            style="@style/NavibarBtnStyle"
            android:text="@string/topic"
            android:drawableTop="@drawable/btn_subject" />

        <Button
            android:id="@+id/main_person"
            style="@style/NavibarBtnStyle"
            android:text="@string/person"
            android:drawableTop="@drawable/btn_mine" />
    </LinearLayout>

</RelativeLayout>