<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c5">

    <RelativeLayout
        android:id="@+id/fragment_orders_detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/c4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/fragment_orders_comment_use_name"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_cart_select"
            android:focusable="false"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="匿名评价"
            android:textSize="@dimen/s4"
            android:textColor="@color/c8"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/fragment_orders_comment_use_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/item_orders_send_comment"
            android:layout_width="78dp"
            android:layout_height="34dp"
            android:text="发表评价"
            android:textSize="@dimen/s4"
            android:textColor="@color/c6"
            android:layout_marginRight="@dimen/b1"
            android:background="@drawable/btn_account_select"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        </RelativeLayout>


    <ListView
        android:id="@+id/fragment_orders_comment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="0px"
        android:listSelector="@android:color/transparent"
        android:layout_above="@+id/fragment_orders_detail_bottom"
        android:scrollbars="none" />

</RelativeLayout>
